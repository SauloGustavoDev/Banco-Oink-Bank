<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/titulo_txt"
        style="@style/titulo_pagina"
        android:text="Erro na transação!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        style="@style/subtitulo_pagina"
        android:text="No momento, não foi possível
efetuar a transação. Tente
novamente mais tarde ou entre
em contato conosco."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/titulo_txt"
        app:layout_constraintTop_toBottomOf="@id/titulo_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>