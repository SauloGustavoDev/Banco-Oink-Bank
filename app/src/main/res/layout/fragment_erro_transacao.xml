<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_txt"
        style="@style/titulo_pagina"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Erro na transação!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitulo_txt"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        style="@style/subtitulo_pagina"
        android:text="No momento, não foi possível
efetuar a transação. Tente
novamente mais tarde ou entre
em contato conosco."
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/titulo_txt"
        app:layout_constraintTop_toBottomOf="@id/titulo_txt"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/porco_na_lama"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sair_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitulo_txt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sair_btn"
        style="@style/botao"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:text="@string/tente_novamente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>