<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/layout_margin"
    android:background="@drawable/background_theme"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ConfirmaPixFragment">


    <TextView
        android:id="@+id/textView7"
        style="@style/texto_mais_destaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:text="@string/valor_transferencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirma_dados_subtitulo_txt" />

    <android.widget.Button
        android:id="@+id/confirmar_btn"
        style="@style/salvarLimitePix_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mensagem"
        style="@style/texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/mensagem_confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_txt" />

    <TextView
        style="@style/texto"
        android:id="@+id/nome_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/nome_confirmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saldo_campo_txt" />

    <TextView
        android:id="@+id/data_transferencia_campo_txt"
        style="@style/texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/data_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/data_txt"
        app:layout_constraintTop_toTopOf="@+id/data_txt"
        app:layout_constraintVertical_bias="0.0"
        tools:text="01/07/2022" />

    <TextView
        android:id="@+id/nome_campo_txt"
        style="@style/texto"
        android:layout_width="0dp"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nome_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nome_txt"
        app:layout_constraintTop_toTopOf="@+id/nome_txt"
        tools:text="AndrÃ© da silva" />

    <TextView
        style="@style/texto"
        android:id="@+id/data_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/data_transferencia"
        app:layout_constraintStart_toStartOf="@id/nome_txt"
        app:layout_constraintTop_toBottomOf="@+id/nome_txt" />

    <TextView
        android:id="@+id/saldo_campo_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/nunito_regular"
        tools:text="999,00"
        android:textColor="@color/azul_escuro"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/moeda_txt"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/moeda_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/saldo"
        android:textColor="@color/azul_escuro"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/saldo_campo_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/saldo_campo_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        style="@style/subtitulo_pagina"
        android:id="@+id/confirma_dados_subtitulo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/texto_confirmacao_pix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmacao_titulo" />

    <TextView
        android:id="@+id/confirmacao_titulo"
        style="@style/titulo_pagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/confirmacao"
        app:layout_constraintStart_toEndOf="@+id/voltar_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voltar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>