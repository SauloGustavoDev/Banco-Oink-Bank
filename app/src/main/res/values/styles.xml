<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titulo_pagina">
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="subtitulo_pagina">
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/nunito_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto">
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/nunito_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="botao">
        <item name="android:background">@drawable/btn_botao_azul_claro</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/nunito_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="background">@drawable/btn_rosa</item>
    </style>
</resources>