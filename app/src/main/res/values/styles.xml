<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titulo_pagina">
        <item name="font">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subtitulo_pagina">
        <item name="font">@font/nunito_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="texto">
        <item name="font">@font/nunito_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="texto_azul">
        <item name="android:textColor">@color/azul_escuro</item>
        <item name="font">@font/nunito_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="texto_botao">
        <item name="font">@font/nunito_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="botao">
        <item name="android:background">@drawable/btn_botao_azul_claro</item>
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="font">@font/nunito_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>
    
    <style name="FullScreenDialogTheme" parent="@style/Theme.IntegrationProject">
        <item name="android:windowAnimationStyle">@style/Theme.AppCompat.Dialog</item>
    </style>
</resources>